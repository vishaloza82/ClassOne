
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div class="animsition" data-ng-controller="myLoginCtrl">

    <div class="row d-flex justify-content-center">
        <!-- /# column -->
        <div class="col-lg-6" style="text-align:left">
            <div class="card">
                <div class="card-header" style="text-align:center">
                    <h4>Teacher Registration</h4>
                </div>
                <div class="card-body">

                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="tlogin-tab" data-toggle="tab" href="#tlogin" role="tab" aria-controls="tlogin" aria-selected="true">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="tregistration-tab" data-toggle="tab" href="#tregistration" role="tab" aria-controls="tregistration" aria-selected="false">Registration</a>
                        </li>
                    </ul>
                    <div class="tab-content pl-3 p-1" id="myTabContent">
                        <div class="tab-pane fade show active" id="tlogin" role="tabpanel" aria-labelledby="tlogin-tab">
                            <!--Login Content-->
                            @Html.Action("TeacherLogin")
                            <!--end-->
                        </div>
                        <div class="tab-pane fade" id="tregistration" role="tabpanel" aria-labelledby="tregistration-tab">
                            <!--Registration Content-->
                            @Html.Action("TeacherRegistration")
                            <!--End-->
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>
